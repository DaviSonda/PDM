<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idade" />

        <EditText
            android:id="@+id/txtIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/lblSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexo" />
        <Spinner
            android:id="@+id/txtSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sexOptions" />

        <TextView
            android:id="@+id/lblOlhos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cor dos olhos" />

        <Spinner
            android:id="@+id/txtOlhos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/eyeOptions" />

        <TextView
            android:id="@+id/lblCabelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cor do cabelo" />
        <Spinner
            android:id="@+id/txtCabelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/hairOptions" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>